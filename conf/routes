# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET /recetas controllers.HomeController.getAllRecipes()

GET /receta/:query controllers.HomeController.getRecipe( query )

POST /recetas controllers.HomeController.createRecipe( request: Request )
# curl -X POST -H "Content-Type: application/json" --data '{"name": "Pollo al chilindron", "pasos": {"pasos" :"paso1, 2 3"}, "ratings": {"rating" : "1"}}' "localhost:9000/recetas"

PATCH /receta/:id controllers.HomeController.updateRecipe( id, request: Request )

DELETE /receta/:id controllers.HomeController.deleteRecipe( id )
